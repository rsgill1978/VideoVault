<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoVault.Controls"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="VideoVault.Views.MainWindow"
        Title="VideoVault - Adult Video Catalog"
        Width="1200" Height="800"
        MinWidth="800" MinHeight="600">

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,*,Auto">

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Name="MainMenu">
            <MenuItem Header="File">
                <MenuItem Header="Settings" Click="SettingsButton_Click"
                         ToolTip.Tip="Open application settings">
                    <MenuItem.Icon>
                        <TextBlock Text="âš™" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Exit" Click="Exit_Click"
                         ToolTip.Tip="Close the application">
                    <MenuItem.Icon>
                        <TextBlock Text="âœ–" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Tools">
                <MenuItem Header="Find Duplicates" Click="FindDuplicatesButton_Click"
                         ToolTip.Tip="Search for duplicate video files">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ”" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Open Log Folder" Click="OpenLogFolder_Click"
                         ToolTip.Tip="Open folder containing log files">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ“„" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" Click="About_Click"
                         ToolTip.Tip="About VideoVault">
                    <MenuItem.Icon>
                        <TextBlock Text="â„¹" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        <!-- Path Selection Row -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="10" Margin="10,10,10,0" Name="PathSelectionRow">
            <TextBlock Text="Video Path:" VerticalAlignment="Center" Width="80"/>
            <TextBox Text="{Binding VideoPath}" Width="500" VerticalAlignment="Center"
                     Watermark="Enter or browse to video directory"
                     ToolTip.Tip="Path to the directory containing video files"/>
            <Button Content="Browse..." Click="BrowseButton_Click" Width="100"
                    ToolTip.Tip="Browse for video directory"/>
            <Button Content="Scan" Click="ScanButton_Click" Width="100"
                    IsEnabled="{Binding CanScan}"
                    ToolTip.Tip="Start scanning for video files in the selected directory"/>
            <Button Content="Cancel" Click="CancelButton_Click" Width="100"
                    IsEnabled="{Binding CanCancelScan}"
                    ToolTip.Tip="Cancel the current scan operation"/>
            <Button Content="Settings" Click="SettingsButton_Click" Width="100"
                    ToolTip.Tip="Open application settings"/>
        </StackPanel>

        <!-- Progress Bar Row -->
        <Grid Grid.Row="2" RowDefinitions="Auto,Auto" Margin="10,10,10,10" Name="ProgressRow">
            <ProgressBar Grid.Row="0" Minimum="0" Maximum="{Binding ScanTotal}" 
                        Value="{Binding ScanProgress}" Height="25"
                        IsIndeterminate="{Binding IsScanning}"
                        ToolTip.Tip="Scan progress indicator"/>
            <TextBlock Grid.Row="1" Text="{Binding ScanStatus}" Margin="0,5,0,0"
                      FontStyle="Italic" Foreground="Gray"/>
        </Grid>

        <!-- Video Player Row (Collapsible) -->
        <Grid Grid.Row="3" Margin="10,0,10,10" Name="VideoPlayerRow">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Video Player Header with Collapse Button -->
            <Border Grid.Row="0" Background="#E0E0E0" CornerRadius="5,5,0,0" Padding="10,5" Name="VideoPlayerHeader">
                <Grid ColumnDefinitions="Auto,Auto,*,Auto">
                    <TextBlock Grid.Column="0" Text="â–¼" FontSize="14" VerticalAlignment="Center"
                              Margin="0,0,10,0" Name="VideoPlayerCollapseIcon"
                              ToolTip.Tip="Click to collapse/expand video player"/>
                    <TextBlock Grid.Column="1" Text="Video Player" FontWeight="Bold" FontSize="16"
                              VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="2" Name="CurrentVideoName" Text=""
                              FontSize="14" VerticalAlignment="Center"
                              HorizontalAlignment="Center" Foreground="#555555"
                              FontStyle="Italic" TextTrimming="CharacterEllipsis"
                              Margin="20,0,20,0"/>
                    <Button Grid.Column="3" Content="Collapse" Name="VideoPlayerCollapseButton"
                           Click="VideoPlayerCollapse_Click"
                           ToolTip.Tip="Collapse video player to save space"/>
                </Grid>
            </Border>
            
            <!-- Video Player Content -->
            <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" 
                   CornerRadius="0,0,5,5" Padding="5" Background="White"
                   Name="VideoPlayerContent">
                <local:VideoPlayerControl Name="VideoPlayer" Height="400" />
            </Border>
        </Grid>

        <!-- Main Content Area - Video Library and Duplicates -->
        <Grid Grid.Row="4" Margin="10,0,10,0" Name="MainContentArea">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MinWidth="200"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" MinWidth="150"/>
            </Grid.ColumnDefinitions>
            
            <!-- Video List -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" 
                   CornerRadius="5" Padding="5" Margin="0,0,5,0">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="10" Margin="0,0,0,10">
                        <TextBlock Text="Video Library" FontWeight="Bold" FontSize="16"/>
                        <TextBlock Text="{Binding Videos.Count, StringFormat='({0} videos)'}" 
                                  FontWeight="Normal" FontSize="14" Foreground="Gray"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <ListBox ItemsSource="{Binding Videos}"
                            SelectedItem="{Binding SelectedVideo}"
                            Background="White"
                            SelectionChanged="VideoList_SelectionChanged"
                            DoubleTapped="VideoList_DoubleTapped"
                            Name="VideoListBox"
                            ToolTip.Tip="List of video files in the catalog - Double-click to play or right-click for options">
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Play Video" Click="PlayVideoMenuItem_Click">
                                    <MenuItem.Icon>
                                        <TextBlock Text="â–¶" FontSize="14"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="5">
                                    <Grid ColumnDefinitions="Auto,*">
                                        <!-- Thumbnail -->
                                        <Border Grid.Column="0" Width="80" Height="60"
                                               CornerRadius="3" Margin="0,0,10,0"
                                               BorderBrush="Gray" BorderThickness="1"
                                               Background="#F0F0F0">
                                            <Panel>
                                                <Image Source="{Binding ThumbnailPath}"
                                                      Stretch="UniformToFill"
                                                      IsVisible="{Binding ThumbnailPath, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                                                <TextBlock Text="ðŸ“¹" FontSize="32"
                                                          HorizontalAlignment="Center" VerticalAlignment="Center"
                                                          Foreground="Gray"
                                                          IsVisible="{Binding ThumbnailPath, Converter={x:Static StringConverters.IsNullOrEmpty}}"/>
                                            </Panel>
                                        </Border>

                                        <!-- Video Information -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding FileName}"
                                                      FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                            <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,2,0,0">
                                                <TextBlock Text="{Binding FormattedFileSize}"
                                                          FontSize="11" Foreground="Gray"/>
                                                <TextBlock Text="{Binding Extension}"
                                                          FontSize="11" Foreground="Gray"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- GridSplitter for resizing -->
            <GridSplitter Grid.Column="1" Width="5" Background="LightGray" 
                         ResizeDirection="Columns" 
                         ToolTip.Tip="Drag to resize panels"/>

            <!-- Duplicate Groups -->
            <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1" 
                   CornerRadius="5" Padding="5">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="10" Margin="0,0,0,10">
                        <TextBlock Text="Duplicate Groups" FontWeight="Bold" FontSize="16"/>
                        <TextBlock Text="{Binding DuplicateGroups.Count, StringFormat='({0} groups)'}" 
                                  FontWeight="Normal" FontSize="14" Foreground="Gray"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <Button DockPanel.Dock="Top" Content="Find Duplicates" Click="FindDuplicatesButton_Click"
                           Width="150" HorizontalAlignment="Left" Margin="0,0,0,10"
                           IsEnabled="{Binding CanFindDuplicates}"
                           ToolTip.Tip="Search for duplicate video files based on file hash"/>
                    
                    <ScrollViewer>
                        <ItemsControl ItemsSource="{Binding DuplicateGroups}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="LightGray" BorderThickness="1" 
                                           CornerRadius="3" Padding="5" Margin="0,2">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Files.Count, StringFormat='Group: {0} files'}" 
                                                      FontWeight="Bold" Margin="0,0,0,5"/>
                                            <ItemsControl ItemsSource="{Binding Files}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid ColumnDefinitions="Auto,*,Auto" Margin="5,2">
                                                            <CheckBox Grid.Column="0"
                                                                     IsChecked="{Binding IsMarkedForDeletion}"
                                                                     ToolTip.Tip="Mark for deletion"/>
                                                            <TextBlock Grid.Column="1"
                                                                      Text="{Binding FileName}"
                                                                      FontSize="11"
                                                                      Margin="5,0,5,0"
                                                                      TextWrapping="Wrap"
                                                                      ToolTip.Tip="{Binding FilePath}"/>
                                                            <TextBlock Grid.Column="2"
                                                                      Text="{Binding FormattedFileSize}"
                                                                      FontSize="10"
                                                                      Foreground="Gray"/>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                            <Button Content="Delete Selected" 
                                                   Click="DeleteDuplicates_Click"
                                                   Tag="{Binding}"
                                                   Width="120"
                                                   Margin="0,5,0,0"
                                                   HorizontalAlignment="Right"
                                                   ToolTip.Tip="Delete files marked for deletion"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="5" Background="#F0F0F0" CornerRadius="3" Padding="5" Margin="10,10,10,10" Name="StatusBar">
            <TextBlock Text="{Binding ScanStatus}" FontSize="12"/>
        </Border>
    </Grid>
</Window>
